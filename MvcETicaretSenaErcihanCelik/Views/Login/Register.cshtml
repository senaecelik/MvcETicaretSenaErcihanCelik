
@{
    ViewBag.Title = "Üyelik Formu";
}
<div class="container">
    <div class="row" style="margin-top:50px;">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-md-2">
                    <label>İsim: </label>
                </div>
                <div class="col-md-10">
                    <input type="text" name="name" required placeholder="Adınızı giriniz..." class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Soyisim: </label>
                </div>
                <div class="col-md-10">
                    <input type="text" name="surname" required placeholder="Soyadınızı giriniz..." class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Kullanıcı Adı: </label>
                </div>
                <div class="col-md-10">
                    <input type="text" name="username" required placeholder="Kullanıcı adını giriniz..." class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Şifre: </label>
                </div>
                <div class="col-md-10">
                    <input type="password" name="password" required placeholder="Şifrenizi giriniz..." class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Yaş: </label>
                </div>
                <div class="col-md-10">
                    <input type="number" name="age" required value="18" min="18" max="100" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Cinsiyet: </label>
                </div>
                <div class="col-md-10">
                    <div class="form-group">
                        Erkek: <input type="checkbox" name="gender1" checked="checked" />
                        Kadın: <input type="checkbox" name="gender2" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Doğum Tarihi: </label>
                </div>
                <div class="col-md-10">
                    <input type="date" name="birthdate" required class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="KAYDET" class="form-control btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>

