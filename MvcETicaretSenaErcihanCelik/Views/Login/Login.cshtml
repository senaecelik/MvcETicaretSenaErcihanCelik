
@{
    ViewBag.Title = "Giriş Formu";
}

<div class="container">
    <div class="row" style="margin-top:50px;">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-md-2">
                    <label>Kullanıcı Adı: </label>
                </div>
                <div class="col-md-10">
                    <input type="text" name="username" required placeholder="Kullanıcı adını giriniz..." class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label>Şifre: </label>
                </div>
                <div class="col-md-10">
                    <input type="password" name="password" required placeholder="Şifrenizi giriniz..." class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="GİRİŞ YAP" class="btn btn-success form-control" />
                </div>
            </div>
        }
    </div>
</div>

