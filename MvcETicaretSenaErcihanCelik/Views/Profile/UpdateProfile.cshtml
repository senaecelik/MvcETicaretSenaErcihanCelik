@model MvcETicaretSenaErcihanCelik.Models.Customer
@{
    ViewBag.Title = "UpdateProfile";
}

<div class="container">
    <div class="row" style="margin-top:50px;">
        <h2>Profil Güncelleme</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Ad: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Soyad: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Kullanıcı Adı: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" value="@Model.UserName" disabled="disabled" name="UserName" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Şifre: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Yaş: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" value="Model.Age" min="18" max="99" class="form-control" name="Age" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Cinsiyet: </label>
                        </div>
                        <div lass="form-group">
                            <div class="col-md-10">
                                <label>
                                    @{
                                        if (!Model.Gender)
                                        {
                                            <input type="checkbox" name="Gender" checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="Gender" />
                                        }
                                    }
                                    Erkek
                                </label>
                                <label>
                                    @{
                                        if (!Model.Gender)
                                        {
                                            <input type="checkbox" name="Gender2" checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="Gender2" />
                                        }
                                    }
                                    Kadın
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Doğum Tarihi:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>E-mail: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Cep Telefonu: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Mobile1, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Adres: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextAreaFor(x => x.Address1, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Şehir: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label>Posta Kodu: </label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <input type="submit" value="Profili Güncelle" class="btn btn-success form-control" />
                        </div>
                    </div>
                 }
            </div>
        </div>
    </div>
</div>
